	"item": [
		{
			"name": "http://localhost:4000/api/orders",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Generate HS256 JWT with { tenantId }",
							"const header = { alg: \"HS256\", typ: \"JWT\" };",
							"const payload = { tenantId: pm.environment.get(\"tenantId\") };",
							"",
							"function b64url(obj) {",
							"  const wordArray = CryptoJS.enc.Utf8.parse(JSON.stringify(obj));",
							"  const base64 = CryptoJS.enc.Base64.stringify(wordArray);",
							"  return base64.replace(/=+$/,'').replace(/\\+/g,'-').replace(/\\//g,'_');",
							"}",
							"",
							"const unsigned = b64url(header) + \".\" + b64url(payload);",
							"const sig = CryptoJS.HmacSHA256(unsigned, pm.environment.get(\"JWT_SECRET\"));",
							"const sigb64 = CryptoJS.enc.Base64.stringify(sig).replace(/=+$/,'').replace(/\\+/g,'-').replace(/\\//g,'_');",
							"pm.environment.set(\"jwt\", unsigned + \".\" + sigb64);"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
